  },
  "license": "Apache-2.0",
  "author": "Zondax AG",
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "rm -rf dist && rollup -c rollup.config.mjs",
